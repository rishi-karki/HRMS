    <servlet>
        <servlet-name>InsertQualification</servlet-name>
        <servlet-class>Servlet.InsertQualification</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InsertQualification</servlet-name>
        <url-pattern>/InsertQualification</url-pattern>
    </servlet-mapping>

    <!--Servlet to obtain qualification data of x employee-->
    <servlet>
        <servlet-name>RetrieveQualification</servlet-name>
        <servlet-class>Servlet.RetrieveQualification</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RetrieveQualification</servlet-name>
